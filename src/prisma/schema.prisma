// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id           Int       @id @default(autoincrement())
  title        String
  content      String
  createdAt    DateTime  @default(now())
  randomUserId String    // Unique ID for anonymizing user per post

  comments     Comment[] // Relation to comments
  votes        Vote[]    // Relation to votes
}

model Comment {
  id           Int       @id @default(autoincrement())
  content      String
  createdAt    DateTime  @default(now())
  randomUserId String    // Unique ID for anonymizing user per comment

  postId       Int
  post         Post      @relation(fields: [postId], references: [id])

  parentId     Int?      // Optional parent comment ID for nesting
  parent       Comment?  @relation("CommentThread", fields: [parentId], references: [id]) // Parent relation for nesting
  children     Comment[] @relation("CommentThread") // Children relation for nested comments

  votes        Vote[]    // Relation to votes
}

model Vote {
  id        Int      @id @default(autoincrement())
  type      String   // 'up' or 'down'
  createdAt DateTime @default(now())

  postId    Int?     // Optional post vote
  post      Post?    @relation(fields: [postId], references: [id])

  commentId Int?     // Optional comment vote
  comment   Comment? @relation(fields: [commentId], references: [id])
}
